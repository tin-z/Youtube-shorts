{
    "manifest_version": 2,
    "name": "Youtube-shorts remove",
    "version": "0.1",
    "description": "Remove from your youtube homepage the 'Shorts' section, simple as that.",
    "icons":{
        "128":"icons/icon.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "all_frames": true,
            "js": ["main.js"]
        }
    ],
    "action": {
        "default_icon":{
            "128":"icons/icon.png"
        },
        "default_title": "Youtube-shorts remove",
        "default_popup": "popup.html"
    }
}
